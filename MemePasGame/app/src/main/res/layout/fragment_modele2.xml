<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.umontreal.mpg.memepasgame.fragments.Modele2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modèle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="16pt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier le modèle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="55dp"
        android:textSize="10pt" />


    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/imageTwitter"
            android:layout_width="315dp"
            android:layout_height="162dp"
            android:layout_marginTop="105dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:background="@android:color/white"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imageModele"
            android:layout_width="wrap_content"
            android:layout_height="310dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/textTwitter"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:hint="Écrire ici ..."
            android:textSize="8pt"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="45dp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:inputType="textVisiblePassword|textMultiLine"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/textPatrick"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:hint="Écrire ici ..."
            android:textSize="8pt"
            android:maxLength="100"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:inputType="textVisiblePassword|textMultiLine"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/textDrake1"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:hint="Écrire ici ..."
            android:textSize="8pt"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="190dp"
            android:background="@android:color/transparent"
            android:inputType="textVisiblePassword|textMultiLine"
            android:textAlignment="viewStart"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/textDrake2"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:hint="Écrire ici ..."
            android:textSize="8pt"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="190dp"
            android:background="@android:color/transparent"
            android:inputType="textVisiblePassword|textMultiLine"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/textBrain1"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:hint="Écrire ici ..."
            android:textSize="6pt"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="75dp"
            android:background="@android:color/transparent"
            android:inputType="textVisiblePassword|textMultiLine"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/textBrain2"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:hint="Écrire ici ..."
            android:textSize="6pt"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="75dp"
            android:background="@android:color/transparent"
            android:inputType="textVisiblePassword|textMultiLine"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/textBrain3"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:hint="Écrire ici ..."
            android:textSize="6pt"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="75dp"
            android:background="@android:color/transparent"
            android:inputType="textVisiblePassword|textMultiLine"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/textBrain4"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:hint="Écrire ici ..."
            android:textSize="6pt"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="235dp"
            android:layout_marginLeft="75dp"
            android:background="@android:color/transparent"
            android:inputType="textVisiblePassword|textMultiLine"
            android:visibility="gone"/>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/bCameraM2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/camera"
        android:scaleType="centerInside"
        android:layout_gravity="bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="12dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/bGalerieM2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/galerie"
        android:scaleType="centerInside"
        android:layout_gravity="bottom"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="12dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/bOrientationM2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/rotate"
        android:scaleType="centerInside"
        android:layout_gravity="bottom"
        android:layout_marginLeft="160dp"
        android:layout_marginBottom="12dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/bContinuerM2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:text="Continuer"
        android:drawableRight="@drawable/continuer"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:progress="50"
        style="@android:style/Widget.ProgressBar.Horizontal" />




</FrameLayout>
