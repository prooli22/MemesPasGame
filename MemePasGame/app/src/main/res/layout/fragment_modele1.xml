<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/modeleLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.umontreal.mpg.memepasgame.fragments.Modele1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="@string/modele"
        android:textSize="16pt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="55dp"
        android:text="@string/selectionnerModele"
        android:textSize="10pt" />

    <ImageButton
        android:id="@+id/img_brain_meme"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:background="#000000"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/brain_meme" />

    <ImageButton
        android:id="@+id/img_drake_meme"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="120dp"
        android:background="#000000"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/drake_meme" />

    <ImageButton
        android:id="@+id/img_twitter_meme"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="290dp"
        android:background="#000000"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/twitter_meme" />

    <ImageButton
        android:id="@+id/img_patrick_meme"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="290dp"
        android:background="#000000"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/patrick_meme" />

    <Button
        android:id="@+id/b_ContinuerM1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp"
        android:text="@string/continuer"
        android:drawableRight="@drawable/continuer"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:progress="5"
        style="@android:style/Widget.ProgressBar.Horizontal" />


</FrameLayout>
