<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/modeleLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.umontreal.mpg.memepasgame.fragments.Modele1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="Modèle"
        android:textSize="16pt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:text="Sélectionner un modèle"
        android:textSize="10pt" />

    <ImageButton
        android:id="@+id/img_brain_meme"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:background="#000000"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/brain_meme" />

    <ImageButton
        android:id="@+id/img_drake_meme"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="100dp"
        android:background="#000000"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/drake_meme" />

    <ImageButton
        android:id="@+id/img_twitter_meme"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="280dp"
        android:background="#000000"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/twitter_meme" />

    <ImageButton
        android:id="@+id/img_patrick_meme"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="280dp"
        android:background="#000000"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/patrick_meme" />

    <Button
        android:id="@+id/b_ContinuerM1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp"
        android:text="Continuer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modèle sélectionné : "
        android:layout_gravity="bottom"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/modele_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="150dp"/>

</FrameLayout>
