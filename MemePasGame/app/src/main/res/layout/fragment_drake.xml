<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.umontreal.mpg.memepasgame.fragments.Modele1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modèle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="16pt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Créé votre meme"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:textSize="10pt"
        />


    <Button
        android:id="@+id/b_ContinuerM1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:text="Continuer"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modèle sélectionné : "
        android:layout_gravity="bottom"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/modele_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="150dp"/>

    <ImageView
        android:id="@+id/img_drake_meme"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/drake_meme"
        android:scaleType="fitXY"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="100dp"
        android:background="#000000"
        android:padding="2dp"
        />

    <EditText
        android:id="@+id/Drake1Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Texte 1"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="190dp"
        android:layout_marginRight="50dp"
        android:inputType="textMultiLine"
        android:maxLines="4" />
    <EditText
        android:id="@+id/Drake2Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Texte 2"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="190dp"
        android:layout_marginRight="50dp"
        android:inputType="textMultiLine"
        android:maxLines="4" />



</FrameLayout>